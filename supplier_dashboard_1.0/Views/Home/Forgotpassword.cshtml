@model supplier_dashboard_1._0.Models.db_User

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Masterpages/Layout_dashboard.cshtml";
    
}
<div style="margin-top:120px;">
    <h2>Forgot Password</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <div class="text-success">
                Enter your Vendor ID for changing password using Email.
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Vendor ID</label>
                @Html.TextBox("VendorID", "", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    @*<div>
        @Html.ActionLink("Not Interested !", "Index")
    </div>*@
</div>